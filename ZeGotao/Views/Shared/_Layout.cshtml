<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Mais Saúde</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Layout.css" />

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- FIX FINAL DO MODAL (FUNCIONA 100%) -->
    <style>
        /* Modal e backdrop sempre acima de tudo */
        .modal-backdrop.show {
            opacity: .55 !important;
            z-index: 4000 !important;
        }

        .modal {
            z-index: 5000 !important;
        }

        /* Removemos stacking context que quebrava o modal */
        .page-wrapper {
            position: static !important;
            z-index: auto !important;
        }

        /* Vídeo sempre no fundo REAL */
        #bg-video {
            position: fixed !important;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -3 !important;
        }

        #video-overlay {
            position: fixed !important;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,.45);
            z-index: -2 !important;
        }
    </style>

</head>
<body>

    <!-- VIDEO -->
    <video autoplay muted loop id="bg-video">
        <source src="~/videos/Back.mp4" type="video/mp4" />
    </video>

    <!-- OVERLAY -->
    <div id="video-overlay"></div>

    <div class="page-wrapper">

        <!-- NAVBAR -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-amd fixed-top">
                <div class="container-fluid">

                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/mascote.png"
                             alt="Logo"
                             style="height:50px; width:auto; object-fit:contain;" /> Mais Saúde
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Carteirinha">Carteirinha</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Consulta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Unidades" asp-action="Index">Unidades</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vacinas" asp-action="Index">Vacinas</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                            </li>

                            <li class="nav-item">
                                <button id="darkModeToggle" class="dark-toggle-btn">
                                    <i class="fa-solid fa-moon"></i>
                                </button>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- CONTEÚDO -->
        <main role="main" class="container mt-5 fade-in" id="main-content">
            <div class="content-card">
                @RenderBody()
            </div>
        </main>

        <!-- FOOTER -->
        <footer class="footer-amd text-center py-3">
            <p class="mb-0">© @DateTime.Now.Year - Mais Saúde | Todos os direitos reservados</p>
        </footer>

    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DARK MODE LOGIC -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggle = document.getElementById('darkModeToggle');
            const themeIcon = document.getElementById('themeIcon');
            const root = document.documentElement;
            const body = document.body;

            const saved = localStorage.getItem('theme');
            const systemPref = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            const initial = saved || systemPref || 'light';

            function applyTheme(theme) {
                if (theme === 'dark') {
                    body.classList.add('dark-mode');
                    root.setAttribute('data-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                } else {
                    body.classList.remove('dark-mode');
                    root.removeAttribute('data-theme');
                    localStorage.setItem('theme', 'light');
                }
            }

            applyTheme(initial);

            if (toggle) {
                toggle.addEventListener('click', function () {
                    const isDark = body.classList.contains('dark-mode');
                    applyTheme(isDark ? 'light' : 'dark');
                });
            }

            window.addEventListener('scroll', function () {
                const nav = document.querySelector('.navbar-amd');
                if (!nav) return;
                if (window.scrollY > 80) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
