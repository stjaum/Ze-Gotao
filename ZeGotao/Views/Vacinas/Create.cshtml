@model ZeGotao.Models.Vacinas
@{
    ViewData["Title"] = "Cadastrar Vacina";
}
<link rel="stylesheet" href="~/css/Layout.css" />
<div class="container mt-4 cadastrar-wrapper">

    <h2 class="text-center mb-4">Cadastrar Vacina</h2>

    @* MENSAGENS *@
    @if (ViewData["MsgErro"] != null)
    {
        <div class="alert alert-danger">@ViewData["MsgErro"]</div>
    }
    @if (TempData["MsgSucesso"] != null)
    {
        <div class="alert alert-success">@TempData["MsgSucesso"]</div>
    }

    <form asp-controller="Vacinas" asp-action="Create" method="post" class="cadastrar-form">

        <!-- Nome da Vacina -->
        <div class="input-wrap float-label">
            <input asp-for="NomeVacina" class="input-field" placeholder=" " />
            <label for="NomeVacina">Nome da vacina</label>
            <span asp-validation-for="NomeVacina" class="text-danger"></span>
        </div>

        <!-- Descrição da Vacina -->
        <div class="input-wrap float-label">
            <textarea asp-for="DescricaoVacina" class="input-field" placeholder=" " style="height: 120px;"></textarea>
            <label for="DescricaoVacina">Descrição da vacina</label>
            <span asp-validation-for="DescricaoVacina" class="text-danger"></span>
        </div>

        <!-- Faixa Etária -->
        <div class="input-wrap float-label">
            <input asp-for="FaixaEtaria" class="input-field" placeholder=" " />
            <label for="FaixaEtaria">Faixa etária</label>
            <span asp-validation-for="FaixaEtaria" class="text-danger"></span>
        </div>

        <button class="btn-cadastrar w-100 mt-3">Cadastrar</button>

    </form>

    <p class="text-center mt-3">
        <a asp-controller="Vacinas" asp-action="Index">Voltar</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
