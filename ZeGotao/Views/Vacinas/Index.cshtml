@model IEnumerable<Vacinas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVacina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoVacina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaixaEtaria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVacina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoVacina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaixaEtaria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVacina">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVacina">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVacina">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
