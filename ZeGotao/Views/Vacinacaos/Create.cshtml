@model Vacinacao
@{
    ViewData["Title"] = "Registrar Vacinação";
}

<div class="container mt-4">

    <h2 class="mb-3">Registrar Vacinação</h2>
    <hr />

    <form asp-action="Create" class="row g-4">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Usuário -->
        <div class="col-md-6">
            <div class="input-wrap float-label">
                <select asp-for="IdUsuario" class="input-field select-field no-icon" asp-items="ViewBag.IdUsuario">
                    <option value="">Selecione o Usuário</option>
                </select>
                <label asp-for="IdUsuario">Usuário</label>
            </div>
            <span asp-validation-for="IdUsuario" class="input-error"></span>
        </div>

        <!-- Vacina -->
        <div class="col-md-6">
            <div class="input-wrap float-label">
                <select asp-for="IdVacina" class="input-field select-field no-icon" asp-items="ViewBag.IdVacina">
                    <option value="">Selecione a Vacina</option>
                </select>
                <label asp-for="IdVacina">Vacina</label>
            </div>
            <span asp-validation-for="IdVacina" class="input-error"></span>
        </div>

        <!-- Unidade -->
        <div class="col-md-6">
            <div class="input-wrap float-label">
                <select asp-for="IdUnidade" class="input-field select-field no-icon" asp-items="ViewBag.IdUnidade">
                    <option value="">Selecione a Unidade</option>
                </select>
                <label asp-for="IdUnidade">Unidade</label>
            </div>
            <span asp-validation-for="IdUnidade" class="input-error"></span>
        </div>

        <!-- Status -->
        <div class="col-md-6 d-flex align-items-center">
            <label class="form-check-label">
                <input class="form-check-input me-2" asp-for="Status" />
                @Html.DisplayNameFor(model => model.Status)
            </label>
        </div>

        <!-- Botões -->
        <div class="col-12 mt-3">
            <button type="submit" class="btn-entrar">Salvar</button>
            <a asp-action="Index" class="btn-cadastrar ms-3">Voltar</a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}