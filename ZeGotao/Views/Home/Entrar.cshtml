@model ZeGotao.Models.Usuario
@{
    ViewData["Title"] = "Entrar";
}

<div class="login-container">

    <h2 class="title">Entrar</h2>

    <form asp-action="Entrar" method="post">

        <!-- Email -->
        <div class="input-wrap float-label">
            <input asp-for="Email" class="input-field" placeholder=" " />
            <label asp-for="Email">E-mail</label>
            <span class="input-error">@Html.ValidationMessageFor(m => m.Email)</span>
        </div>

        <!-- Senha -->
        <div class="input-wrap float-label">
            <input asp-for="Senha" type="password" class="input-field" placeholder=" " />
            <label asp-for="Senha">Senha</label>
            <span class="input-error">@Html.ValidationMessageFor(m => m.Senha)</span>
        </div>

        <button type="submit" class="btn-login">Entrar</button>

    </form>

    <p class="helper-text">
        Não tem conta?
        <a class="link" href="/Home/Cadastrar">Criar conta</a>
    </p>

</div>
