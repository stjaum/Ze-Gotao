@model ZeGotao.Models.Usuario

<div class="container mt-4">

    <h2 class="mb-4">Detalhes do Usuário</h2>

    <div class="card p-4 shadow-sm">

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Model.Cpf</dd>

            <dt class="col-sm-3">Tipo de Usuário</dt>
            <dd class="col-sm-9">@Model.TipoUsuario?.DescricaoTipoUsuario</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>

    </div>

</div>
