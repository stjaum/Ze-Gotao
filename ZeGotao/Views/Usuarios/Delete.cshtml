@model ZeGotao.Models.Usuario

<div class="container mt-4">

    <h2 class="mb-4 text-danger">Remover Usuário</h2>

    <div class="alert alert-danger">
        Tem certeza que deseja remover este usuário?
        <strong>Esta ação não pode ser desfeita.</strong>
    </div>

    <div class="card p-4 shadow-sm">

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Model.Cpf</dd>

            <dt class="col-sm-3">Tipo de Usuário</dt>
            <dd class="col-sm-9">@Model.TipoUsuario?.DescricaoTipoUsuario</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdUsuario" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Remover</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>

    </div>

</div>
