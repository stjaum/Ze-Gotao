@model ZeGotao.ViewModels.AtualizarCarteirinhaViewModel

<div class="container mt-4">
    <h2 class="mb-4">Atualizar Carteirinha</h2>

    <div class="card p-4">

        <form asp-action="AtualizarCarteirinha" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="IdUsuario" />

            <div class="mb-3">
                <label asp-for="IdVacina" class="form-label"></label>
                <select asp-for="IdVacina" class="form-select" asp-items="Model.Vacinas">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="IdVacina" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataTomou" class="form-label"></label>
                <input asp-for="DataTomou" type="date" class="form-control" />
                <span asp-validation-for="DataTomou" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdUnidade" class="form-label"></label>
                <select asp-for="IdUnidade" class="form-select" asp-items="Model.Unidades">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="IdUnidade" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Salvar</button>

            <a asp-action="Carteirinha" asp-route-id="@Model.IdUsuario" class="btn btn-secondary ms-2">
                Voltar
            </a>

        </form>
    </div>
</div>
