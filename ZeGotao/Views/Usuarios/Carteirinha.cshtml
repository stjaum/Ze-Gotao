@model ZeGotao.ViewModels.CarteirinhaViewModel

<div class="container mt-4">
    <h2 class="mb-4">Carteirinha de Vacinação</h2>

    <div class="card p-3 mb-4 d-flex justify-content-between align-items-center flex-row">
        <h4 class="mb-0">@Model.NomeUsuario</h4>

        <a asp-action="AtualizarCarteirinha"
           asp-route-id="@Model.IdUsuario"
           class="btn btn-primary">
            Atualizar Carteirinha
        </a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Vacina</th>
                <th>Status</th>
                <th>Data</th>
                <th>Unidade</th>
                <th>Endereço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.NomeVacina</td>

                    <td>
                        @if (item.Tomou)
                        {
                            <span class="text-success fw-bold">✔ Tomada</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">✘ Pendente</span>
                        }
                    </td>

                    <td>@(item.Tomou ? item.DataTomou.ToShortDateString() : "-")</td>

                    <td>@item.NomeUnidade</td>

                    <td>@item.EnderecoUnidade</td>
                </tr>
            }
        </tbody>
    </table>
</div>
