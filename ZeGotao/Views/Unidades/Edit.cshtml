@model ZeGotao.Models.Unidade
@{
    ViewData["Title"] = "Editar Unidade";
}

<div class="container mt-4 cadastrar-wrapper">

    <h2 class="text-center mb-4">Editar Unidade</h2>

    <form asp-action="Edit" method="post" class="cadastrar-form">

        <input type="hidden" asp-for="IdUnidade" />

        <div class="input-wrap float-label">
            <input asp-for="NomeUnidade" class="input-field" placeholder=" " />
            <label for="NomeUnidade">Nome da Unidade</label>
            <span asp-validation-for="NomeUnidade" class="text-danger"></span>
        </div>

        <div class="input-wrap float-label">
            <input asp-for="Endereco" class="input-field" placeholder=" " />
            <label for="Endereco">Endereço</label>
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="input-wrap float-label">
            <input asp-for="Telefone" class="input-field" placeholder=" " />
            <label for="Telefone">Telefone</label>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <button class="btn-cadastrar w-100 mt-3">Salvar Alterações</button>

    </form>

    <p class="text-center mt-3">
        <a asp-action="Index">Voltar</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
