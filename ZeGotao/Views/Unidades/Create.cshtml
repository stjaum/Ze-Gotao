@model ZeGotao.Models.Unidade
@{
    ViewData["Title"] = "Cadastrar Unidade";
}

<div class="container mt-4 cadastrar-wrapper">

    <h2 class="text-center mb-4">Cadastrar Unidade</h2>

    @* MENSAGENS *@
    @if (ViewData["MsgErro"] != null)
    {
        <div class="alert alert-danger">@ViewData["MsgErro"]</div>
    }
    @if (TempData["MsgSucesso"] != null)
    {
        <div class="alert alert-success">@TempData["MsgSucesso"]</div>
    }

    <form asp-controller="Unidades" asp-action="Create" method="post" class="cadastrar-form">

        <!-- Nome da Unidade -->
        <div class="input-wrap float-label">
            <input asp-for="NomeUnidade" class="input-field" placeholder=" " />
            <label for="NomeUnidade">Nome da Unidade</label>
            <span asp-validation-for="NomeUnidade" class="text-danger"></span>
        </div>

        <!-- Endereço -->
        <div class="input-wrap float-label">
            <input asp-for="Endereco" class="input-field" placeholder=" " />
            <label for="Endereco">Endereço</label>
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <!-- Telefone -->
        <div class="input-wrap float-label">
            <input asp-for="Telefone" class="input-field" placeholder=" " />
            <label for="Telefone">Telefone</label>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <button class="btn-cadastrar w-100 mt-3">Cadastrar</button>
    </form>

    <p class="text-center mt-3">
        <a asp-controller="Unidades" asp-action="Index">Voltar</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}