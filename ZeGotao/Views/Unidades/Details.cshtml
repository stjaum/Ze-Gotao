@model ZeGotao.Models.Unidade
@{
    ViewData["Title"] = "Detalhes da Unidade";
}

<div class="container mt-4 cadastrar-wrapper">
    <h2 class="text-center mb-4">Detalhes da Unidade</h2>

    <div class="card p-3">

        <p><strong>Nome:</strong> @Model.NomeUnidade</p>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>

    </div>

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model.IdUnidade" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
