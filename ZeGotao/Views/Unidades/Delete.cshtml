@model ZeGotao.Models.Unidade
@{
    ViewData["Title"] = "Excluir Unidade";
}

<div class="container mt-4 cadastrar-wrapper">
    <h2 class="text-center mb-4">Excluir Unidade</h2>

    <div class="alert alert-danger text-center">
        Tem certeza que deseja excluir esta unidade?
    </div>

    <div class="card p-3 mb-3">
        <p><strong>Nome:</strong> @Model.NomeUnidade</p>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUnidade" />

        <button class="btn btn-danger w-100 mb-2">Excluir</button>

        <a asp-action="Index" class="btn btn-secondary w-100">Cancelar</a>
    </form>
</div>
